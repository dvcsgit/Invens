@model PFG.Inventory.Web.ViewModels.ERPCompareListViewModels
@{
    var title = MenuUtils.GetPageTitle(HttpContext.Current);
    UserModel userModel = ViewBag.UserModel;
}

@section BreadCrumbs{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>
        <ul class="breadcrumb">
            <li>
                <i class="icon-wrench"></i>
                <a href="@Url.Action("Index")">基礎資料管理</a>
            </li>
            <li class="active">
                <i class="icon-group"></i>
                @title
            </li>
        </ul>
    </div>
}

@section PageHeader{

}

<div id="item-index">
    <h3 class="header smaller lighter blue">@title</h3>
    <p>
        @if (userModel.Operation.HasFlag(EnumOperation.Query))
        {
            <button id="queryBtn" class="btn btn-white btn-info btn-bold">
                <i class="ace-icon fa fa-search bigger-120 blue"></i>
                查詢
            </button>
        }
    </p>


    <div class="row">
        <div class="col-sm-12">
            <div class="widget-box">
                <div class="widget-header widget-header-flat">
                    <h4 class="widget-title smaller">
                        <i class="ace-icon fa fa-quote-left smaller-80"></i>
                        查詢條件
                    </h4>
                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        @using (Ajax.BeginForm("Query", null, SiteLibrary.GetDefaultAjaxOptions(), new { @id = "query-form" }))
                        {
                            <div class="row">
                                <div class="col-xs-1">
                                    @Html.LabelFor(x => x.Parameters.WarehouseID)
                                </div>
                                <div class="col-xs-3">
                                    @Html.TextBoxFor(x=>x.Parameters.WarehouseID)
                                    @*<select id="Parameters_WarehouseID" name="Parameters.WarehouseID">
                                        @foreach (var item in SelectListUtils.GetWarehouseOptions())
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>*@
                                </div>
                                <div class="col-xs-offset-6">

                                </div>
                            </div>
                            <div class="row"><br /></div>
                            <div class="row">
                                <div class="col-sm-1 control-label no-padding-right">
                                    @Html.LabelFor(x => x.Parameters.CurrentDate)
                                </div>
                                <div class="col-sm-3">
                                    <div class="input-group">
                                        @Html.TextBoxFor(x => x.Parameters.CurrentDate, new { @class = "form-control input-large input-append date", @placeholder = "EX:請選擇基準日" })
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar bigger-110"></i>
                                        </span>
                                    </div>

                                </div>
                                <div class="col-sm-1 control-label no-padding-right">
                                    @Html.LabelFor(x => x.Parameters.HistoryDate)
                                </div>
                                <div class="col-sm-3">
                                    <div class="input-group">
                                        @Html.TextBoxFor(x => x.Parameters.HistoryDate, new { @class = "form-control input-large input-append date", @placeholder = "EX:請選擇比較日" })
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar bigger-110"></i>
                                        </span>
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <hr />
            <div id="divGridView">

            </div>
        </div>
    </div>

</div>

<div id="item-detail" style="display:none">
</div>

@section Scripts{
    <script>
        $(function () {
        //    $("#Parameters_WarehouseID").select2({
        //        placeholder: "請選擇外倉",
        //        minimunInputLength: 0,
        //        width: "250px",
        //        allowClear: true,
        //        dropdownCssClass: "bigdrop",
        //        formatSearching: function () { return "搜尋中，請稍後..."; },
        //        formatNoMatches: function () { return "沒有可查詢的資料"; },
        //        formatLoadMore: function () { return "更多..."; }
        //    }
            //);
            $("#Parameters_WarehouseID").select2(Application.select2("EX: 請選擇外倉", "250px", '@Url.Action("GetWarehouseID","Utils")'));
            //Query查詢
            $("#queryBtn").click(function (e) {
                var currentDate = $("#Parameters_CurrentDate").val();
                var historyDate = $("#Parameters_HistoryDate").val();
                if (currentDate == historyDate) {
                    $.Alert("您選擇的日期相同！請重新選擇！");
                    return;
                } 
                $("#query-form").submit();
                e.preventDefault();
            });
            //日期選擇
            $("#Parameters_CurrentDate").datepicker({
                autoclose: true,
                format: "yyyy/mm/dd",
                language: "zh-TW",
                todayHighlight: true
            }).next().on(ace.click_event, function () {
                    $(this).prev().focus();
            });
            $("#Parameters_HistoryDate").datepicker({
                autoclose: true,
                format: "yyyy/mm/dd",
                language: "zh-TW",
                todayHighlight: true
            }).next().on(ace.click_event, function () {
                $(this).prev().focus();
            });
        });
    </script>
}

