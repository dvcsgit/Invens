@model PFG.Inventory.Web.ViewModels.OutBoundInventoryListViewModels

@{
    //使用者管理
    var title = MenuUtils.GetPageTitle(HttpContext.Current);
    UserModel userModel = ViewBag.UserModel;
}



@section BreadCrumbs{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>
        <ul class="breadcrumb">
            <li>
                <i class="icon-wrench"></i>
                <a href="@Url.Action("Index")">基礎資料管理</a>
            </li>
            <li class="active">
                <i class="icon-group"></i>
                @title
            </li>
        </ul>
    </div>
}

@section PageHeader{

}

<div id="item-index">
    <h3 class="header smaller lighter blue">@title</h3>
    <p>
        @if (userModel.Operation.HasFlag(EnumOperation.Query))
        {
            <button id="btn-query" class="btn btn-white btn-info btn-bold">
                <i class="ace-icon fa fa-search bigger-120 blue"></i>
                查詢
            </button>

            @*<button id="resetBtn" class="btn btn-white btn-default btn-bold">
                <i class="ace-icon fa fa-refresh bigger-120 grey"></i>
                重設
            </button>*@

        }

        @if (userModel.Operation.HasFlag(EnumOperation.Export))
        {
            <button id="btn-export" class="btn btn-white btn-default btn-bold">
                <i class="ace-icon fa fa-download bigger-120 grey"></i>
                列印
            </button>

        }
    </p>


    <div class="row">
        <div class="col-sm-12">
            <div class="widget-box">
                <div class="widget-header widget-header-flat">
                    <h4 class="widget-title smaller">
                        <i class="ace-icon fa fa-quote-left smaller-80"></i>
                        查詢條件
                    </h4>
                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        @using (Ajax.BeginForm("Query", null, SiteLibrary.GetDefaultAjaxOptions(), new { @id = "query-form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="row form-group">
                                <div class="col-sm-1 control-label no-padding-right">
                                    @Html.LabelFor(x => x.Parameters.DateUpload)
                                </div>
                                <div class="col-sm-3">
                                    <div class="input-group">
                                        @Html.TextBoxFor(x => x.Parameters.DateUpload, new { @class = "form-control input-large input-append date", @placeholder = "EX:請選擇上傳日期" })
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar bigger-110"></i>
                                        </span>
                                    </div>
                                    
                                </div>
                                <div class="col-sm-1 control-label no-padding-right">
                                    @Html.LabelFor(x => x.Parameters.WarehouseID)
                                </div>
                                <div class="col-sm-3">
                                    @*<select id="Parameters_WarehouseID" name="Parameters.WarehouseID" class=" input-large">
                                        @foreach (var item in SelectListUtils.GetWarehouseOptions())
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>*@
                                    @Html.TextBoxFor(x=>x.Parameters.WarehouseID)
                                   
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <hr />
            <div id="divGridView">

            </div>
        </div>
    </div>

</div>

<div id="item-detail" style="display:none">
</div>



    @section Scripts{
        <script>
            $(function () {
                $(".date").datepicker({
                    autoclose: true,
                    format: "yyyy/mm/dd",
                    language: "zh-TW",
                    todayHighlight: true
                }).next().on(ace.click_event, function () {
                    $(this).prev().focus();
                });
                //$(".datepicker").datepicker({
                //    autoclose: true,
                //    todayHighlight: true
                //})
                //	//show datepicker when clicking on the icon
                //	.next().on(ace.click_event, function(){
                //	    $(this).prev().focus();
                //	});
                $("#Parameters_WarehouseID").select2(Application.select2("EX: 請選擇外倉", "250px", '@Url.Action("GetWarehouseID","Utils")'));
                //查詢
                $("#btn-query").click(function (e) {
                    //commonjs.formSubmitHandler(e);
                    var warehouse = $("#Parameters_WarehouseID").val();
                    if (warehouse == "" || warehouse == null) {
                        $.Alert("外倉為必要選擇項", undefined, "系統訊息");
                    }
                    $("#query-form").submit();
                    e.preventDefault();
                });

                //匯出
                $("#btn-export").click(function (e) {
                    e.preventDefault();
                    var exp = $("#divGridView input[type='radio']:checked").val();
                    var parameters = new Array();
                    parameters.push("isExport=true");
                    if (exp == undefined) {
                        $.Alert("對不起！請選擇一項列印", undefined, "提示", true);
                        return;
                        //parameters.push("exp=0");
                    } else {
                        parameters.push("exp=" + exp);
                    }
                    commonjs.exportHandler($("#query-form"), "@Url.Action("Query")", parameters);
                });
            });

        </script>
    }
